@model LibraryFrontend.Models.Book

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<div class="details-container">
    <h4>Are you sure you want to delete this book?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Author
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>
</div>

<div class="button-group">
    @using (Html.BeginForm("Delete", "Book", FormMethod.Post))
    {
        <button type="submit" class="btn delete-button">Delete</button>
    }
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn back-button" })
</div>
