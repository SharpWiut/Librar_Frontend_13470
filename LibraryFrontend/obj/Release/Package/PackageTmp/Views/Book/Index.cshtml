@model IEnumerable<LibraryFrontend.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn">Create New</a> 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorId)
        </th>
        <th>
            Author
        </th>
        <th></th>
    </tr>
        
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn">Edit</a> |
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn">Details</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn">Delete</a>
            </td>
        </tr>
    }
</table>
